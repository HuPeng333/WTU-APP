{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "requireConfigFile": false
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "no-extra-semi": "error",
    "semi": [2, "never"],
    "no-undef": "off",
    "quotes": ["error", "single"],
    "vue/no-v-model-argument": "off",
    "object-curly-spacing": ["error", "always"],
    "template-curly-spacing": "error",
    "space-infix-ops": "error",
    "space-before-blocks": "error"
  },
  "root": true,
  "globals": {
    "plus": true
  }
}
